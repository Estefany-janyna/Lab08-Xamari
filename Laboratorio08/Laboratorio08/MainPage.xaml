<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Laboratorio08.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Dependencia de servicios Estefany" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <StackLayout>
            <Entry x:Name="textEntry" Placeholder="Ingrese el texto a reproducir"></Entry>
            <Button Text="Reproducir" Clicked="OnSpeakButtonClicked"></Button>
            <Button Text="Ver bateria" Clicked="OnBattery"></Button>
            <Button Text="Escanear Código QR" Clicked="OnScanQrCodeClicked"></Button>
        </StackLayout>
    </StackLayout>

</ContentPage>
